#!/bin/sh

echo "BOOSTRAP !!!"

sudo pacman -S --needed git base-devel
git clone https://aur.archlinux.org/yay.git
cd yay
makepkg -si
cd ..
rm -rf yay
yay -S kitty hyprland bibata-cursor-theme-bin bluez bluez-utils brightnessctl cava fzf hyprpaper hyprpolkitagent lazygit less luarocks mako neofetch neovim nmap noto-fonts nvm nwg-look oh-my-posh qt5-wayland qt5ct qt6-wayland qt6ct ripgrep rofi spotify thorium-browser traceroute ttf-jetbrains-mono ttf-liberation waybar webkit2gtk wget wireplumber wl-clipboard xdg-desktop-portal-hyprland
